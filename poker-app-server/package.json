{
    "name": "poker-app-server",
    "main": "server.js",
    "scripts": {
        "test": "./node_modules/.bin/mocha $(find test -name '*.spec.js') --compilers js:@babel/register",
        "build": "rimraf dist/ && babel src --out-dir ./dist --source-maps",
        "start": "nodemon --exec babel-node ./src/server.js",
        "debug": "nodemon --exec babel-node --nolazy --inspect ./src/server.js",
        "serve": "npm run-script build && node ./dist/server.js"
    },
    "dependencies": {
        "babel-plugin-transform-builtin-extend": "^1.1.2",
        "body-parser": "~1.0.1",
        "express": "~4.0.0",
        "mongoose": "~3.6.13"
    },
    "devDependencies": {
        "@babel/cli": "^7.2.3",
        "@babel/core": "^7.2.2",
        "@babel/node": "^7.2.2",
        "@babel/preset-env": "^7.2.3",
        "@babel/register": "^7.0.0",
        "chai": "^4.2.0",
        "mocha": "^5.2.0",
        "nock": "^10.0.5",
        "nodemon": "^1.18.9",
        "rimraf": "^2.6.2",
        "sinon": "^7.2.2"
    }
}
